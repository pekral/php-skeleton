{
  "name": "pekral/php-skeleton",
  "description": "Modern PHP package skeleton with strict quality rules, PHPStan max level, Pest testing, and best practices baked in",
  "license": "MIT",
  "type": "project",
  "keywords": [
    "php",
    "skeleton",
    "template",
    "boilerplate",
    "package",
    "phpstan",
    "pest",
    "pint",
    "rector",
    "quality",
    "best-practices",
    "php84"
  ],
  "authors": [
    {
      "name": "Petr KrÃ¡l",
      "email": "kral.petr.88@gmail.com",
      "homepage": "https://github.com/pekral",
      "role": "Maintainer"
    }
  ],
  "homepage": "https://github.com/pekral/php-skeleton",
  "support": {
    "issues": "https://github.com/pekral/php-skeleton/issues",
    "source": "https://github.com/pekral/php-skeleton"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/pekral"
    }
  ],
  "require": {
    "php": "^8.4",
    "ergebnis/composer-normalize": "^2.48.2",
    "laravel/pint": "^1.27.0",
    "nunomaduro/termwind": "^2.3.3",
    "pekral/cursor-rules": "dev-master",
    "pekral/phpcs-rules": "dev-master",
    "pekral/rector-rules": "dev-master",
    "pestphp/pest": "^4.3.1",
    "pestphp/pest-plugin-type-coverage": "^4.0.3",
    "phpstan/extension-installer": "^1.4.3",
    "phpstan/phpstan": "^2.1.37",
    "phpstan/phpstan-deprecation-rules": "^2.0.3",
    "phpstan/phpstan-mockery": "^2.0",
    "phpstan/phpstan-phpunit": "^2.0.12",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": ">=4.0.1",
    "symfony/console": "^7.4.3"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Pekral\\Example\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pekral\\BuildPackage\\": "build-package/",
      "Pekral\\Test\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": false
    },
    "bump-after-update": true,
    "sort-packages": true
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse --memory-limit=2G",
    "check": "composer run composer-normalize-check && composer run phpcs-check && composer run pint-check && composer run rector-check && composer run analyse && composer run security-audit && composer run test:coverage",
    "composer-normalize-check": "composer normalize --dry-run",
    "composer-normalize-fix": "composer normalize",
    "coverage": "@test:coverage",
    "fix": "composer run composer-normalize-fix && composer run rector-fix && composer run pint-fix && composer run phpcs-fix || true",
    "phpcs-check": "vendor/bin/phpcs --standard=ruleset.xml src/ tests/",
    "phpcs-fix": "vendor/bin/phpcbf --standard=ruleset.xml src/ tests/ || true",
    "pint-check": "vendor/bin/pint src/ tests/ --test",
    "pint-fix": "vendor/bin/pint src/ tests/",
    "rector-check": "vendor/bin/rector process --dry-run --no-progress-bar",
    "rector-fix": "vendor/bin/rector process --no-progress-bar",
    "security-audit": "composer audit --format=summary",
    "test:coverage": "php -dpcov.enabled=1 -dpcov.directory=. -dxdebug.mode=off vendor/bin/pest --coverage --min=100"
  }
}
